<resources>
    <!-- Base application theme. -->
    <style name="DsAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ds_colorPrimary</item>
        <item name="colorPrimaryDark">@color/ds_colorPrimaryDark</item>
        <item name="colorAccent">@color/ds_colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DsAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DsAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DsAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DsTheme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="colorAccent">@color/ds_colorPrimaryDark</item>
    </style>


</resources>